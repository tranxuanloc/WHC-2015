<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtitems_notetakephoto_dispatching_DispatchingOrderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout_PalletMovementHistory_Head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/txtitems_notetakephoto_dispatching_DispatchingOrderNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:text="DispatchingOrderNumber"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0000FF" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/txtitems_notetakephoto_dispatching_DispatchingOrderDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="38"
            android:gravity="right"
            android:text="DispatchingOrderDate"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF0000"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/txtitems_notetakephoto_dispatching_CustomerNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="CustomerNumber"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0000FF" />

        <TextView
            android:id="@+id/txtitems_notetakephoto_dispatching_CustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:gravity="left"
            android:text="CustomerName"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0000FF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/txtitems_notetakephoto_dispatching_SpecialRequirement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="?android:attr/textAppearanceMedium"
            android:text="SpecialRequirement"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical" 
        android:background="#1f2649"
        android:visibility="gone"
        >
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="vertical" 
         android:visibility="gone"
        >
    </LinearLayout>

</LinearLayout>