<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <VideoView
            android:id="@+id/VideoShowTakePicture_Video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgShowTakePicture_Img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:gravity="top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtShowTakePicture_Head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Head"
                android:textColor="#1f2649" />

            <TextView
                android:id="@+id/txtShowTakePicture_Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="#1f2649"/>

            <TextView
                android:id="@+id/txtShowTakePicture_FileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1f2649"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
  
   />

</LinearLayout>
