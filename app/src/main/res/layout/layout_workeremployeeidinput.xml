<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100" >

            <TextView
                android:id="@+id/txt_WorkerEmployeeIDInput_OrderNumber"
                style="@style/TextAppearance.EditEvent_LabelHead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="DO"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txt_WorkerEmployeeIDInput_DateTime"
                style="@style/TextAppearance.EditEvent_LabelHead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="right"
                android:text="Date Time"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <general.swipemenulayout.SwipeMenuListView
            android:id="@+id/LVMyOrdersToDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="2dp" >
        </general.swipemenulayout.SwipeMenuListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <AutoCompleteTextView
            android:id="@+id/AutoCP_WorkerEmployeeIDInput_EmployssID"
            style="@style/TextAppearance.EditEvent_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:dropDownVerticalOffset="5dp"
            android:ems="10"
            android:hint="ID"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:singleLine="true" />

        <Button
            android:id="@+id/Cmd_WorkerEmployeeIDInput_Confirm"
            style="@style/DefaultButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_default_bg"
            android:text="Hoàn Thành" />
    </LinearLayout>

</RelativeLayout>