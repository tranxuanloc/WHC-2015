<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txt_LocationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Location"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
        android:width="80dp" />

    <TextView
        android:id="@+id/txt_CustomerNumber"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/txt_LocationNumber"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txt_ProductNumber"
        android:maxWidth="50dp"
        android:text="CustomerNumber"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:width="70dp" />

    <TextView
        android:id="@+id/txt_ProductNumber"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/txt_CustomerNumber"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txt_ProductName"
        android:text="ProductNumber"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:width="100dp" />

    <TextView
        android:id="@+id/txt_ProductName"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/txt_ProductNumber"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txt_CurrentQuantity"
        android:text="ProductName"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:width="250dp" />

    <TextView
        android:id="@+id/txt_CurrentQuantity"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/txt_ProductName"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="CurrentQuantity"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:width="50dp" />

    <TextView
        android:id="@+id/txt_RO"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/txt_LocationNumber"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txt_CustomerNumber"
        android:layout_toRightOf="@+id/txt_LocationNumber"
        android:text="RO"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:width="70dp" />

</LinearLayout>
